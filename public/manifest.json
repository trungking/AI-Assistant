{
  "manifest_version": 3,
  "name": "AI Assistant",
  "version": "1.1.65",
  "description": "Ask AI with selected text context.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "system.display"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AI Assistant"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/content.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open AI Assistant Popup"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
